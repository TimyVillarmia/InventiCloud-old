@page "/store/sales-persons"
@using InventiCloud.Components.UI
@using InventiCloud.Data
@using InventiCloud.Services.Interface
@using InventiCloud.Utils
@using Microsoft.EntityFrameworkCore
@using InventiCloud.Entities
@inject NavigationManager NavigationManager
@inject ISalesPersonService SalesPersonService
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


<PageTitle>Sales Person</PageTitle>

<MudText Class="bold mb-2" Typo="Typo.h4">Sales Person</MudText>
@if (_salesperson == null)
{
    <MudContainer Class="d-flex justify-center align-items-center" Style="height: 100vh;">
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    </MudContainer>
}
else
{
    @if (!_salesperson.Any())
    {

        <MudPaper Height="500px" Class="justify-center align-content-center">
            <MudText Class="bol" Typo="Typo.h6" Align="Align.Center">No Sales Person Found</MudText>
            <MudText Typo="Typo.body1" Align="Align.Center">
                Add Sales Person.
            </MudText>
            <MudContainer Class="d-flex justify-center mt-2">
                <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Href="/store/sales-persons/create" Color="Color.Primary" Class="text-uppercase">
                    Create SALES PERSON
                </MudButton>
            </MudContainer>
        </MudPaper>
    }
    else
    {

        <MudGrid>
            <MudItem sm="6">
                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Variant="Variant.Outlined" Placeholder="Search" Adornment="Adornment.Start" Immediate="true"
                                  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
                </MudStack>
            </MudItem>

            <MudItem sm="6" Class="d-flex align-items-center justify-end" Style="height:50%;">
                <MudButton Variant="Variant.Filled" Href="/store/sales-persons/create" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" Class="text-uppercase">
                    ADD SALES PERSON
                </MudButton>
            </MudItem>

        </MudGrid>

        <MudDataGrid @ref="dataGrid" T="SalesPerson" ServerData="ServerReload" MultiSelection="true" RowClick="@RowClicked">
            <Columns>
                <PropertyColumn Property="sp => sp.FullName" Title="Name" />
                <PropertyColumn Property="sp => sp.PhoneNumber" Title="Contact#" />
                <PropertyColumn Property="sp => sp.Email" Title="Email" />
                <PropertyColumn Property="sp => sp.BirthDate" Title="Birth Date" />
                <TemplateColumn CellClass="d-flex justify-end">
                    <CellTemplate>
                        <MudMenu Icon="@Icons.Material.Filled.MoreVert" AriaLabel="Open user menu">
                            <MudMenuItem Label="Edit" href="@($"/store/sales-persons/{context.Item.FullName}")" />
                            <MudMenuItem Label="Delete" Class="red-text" OnClick="@(() => OpenDialogAsync(context.Item))" />

                        </MudMenu>
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
            <PagerContent>
                <MudDataGridPager T="SalesPerson" />
            </PagerContent>
        </MudDataGrid>



    }

}
@code {
    MudDataGrid<SalesPerson> dataGrid = new();
    private string? searchString;

    private IEnumerable<SalesPerson>? _salesperson;
    private IEnumerable<SalesPerson>? _filteredsalesperson;

    protected override async Task OnInitializedAsync()
    {
        _salesperson = await SalesPersonService.GetAllSalesPersonAsync();
    }

    private async Task<GridData<SalesPerson>> ServerReload(GridState<SalesPerson> state)
    {
        _filteredsalesperson = _salesperson;

        _filteredsalesperson = _filteredsalesperson.Where(sp =>
        {
            if (string.IsNullOrWhiteSpace(searchString))
                return true;
            if (sp.FullName.Contains(searchString, StringComparison.OrdinalIgnoreCase))
                return true;
            if (sp.Email.Contains(searchString, StringComparison.OrdinalIgnoreCase))
                return true;
            if (sp.PhoneNumber.Contains(searchString, StringComparison.OrdinalIgnoreCase))
                return true;
            return false;
        }).ToArray();
        var totalItems = _filteredsalesperson.Count();

        var sortDefinition = state.SortDefinitions.FirstOrDefault();
        if (sortDefinition != null)
        {
            switch (sortDefinition.SortBy)
            {
                case nameof(SalesPerson.FullName):
                    _filteredsalesperson = _filteredsalesperson.OrderByDirection(
                        sortDefinition.Descending ? SortDirection.Descending : SortDirection.Ascending,
                        sp => sp.FullName
                    );
                    break;

            }
        }

        var pagedData = _filteredsalesperson.Skip(state.Page * state.PageSize).Take(state.PageSize).ToArray();
        return new GridData<SalesPerson>
            {
                TotalItems = totalItems,
                Items = pagedData
            };
    }

    private Task OnSearch(string text)
    {
        searchString = text;
        return dataGrid.ReloadServerData();

    }

    void RowClicked(DataGridRowClickEventArgs<SalesPerson> args)
    {


        if (args.Item == null)
        {
            return;
        }

        NavigationManager.NavigateTo($"/store/sales-persons/{args.Item.FullName}");
    }

    async Task OpenDialogAsync(SalesPerson salesperson)
    {
        var parameters = new DialogParameters<DialogComponent>
        {
            {x => x.ContentText, $"Are you sure you want to delete the Sales Person '{salesperson.FullName}'? This action cannot be undone."},
            { "Button1Text", "Delete" },
            { "Button2Text", "Cancel" },
            { "Color", Color.Error }
        };

        var dialog = await DialogService.ShowAsync<DialogComponent>("Delete Sales Person", parameters);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            try
            {
                // delete from db
                await SalesPersonService.DeleteSalesPersonAsync(salesperson);
                Snackbar.Add("Sales Person Deleted", Severity.Success);

                await dataGrid.ReloadServerData();

            }
            catch (InvalidOperationException ex)
            {
                Snackbar.Add(ex.Message, Severity.Error);
            }
            catch (Exception ex)
            {
                Snackbar.Add("An error occurred while deleting the Sales Person.", Severity.Error);
            }
        }
    }


    public async ValueTask DisposeAsync() => await SalesPersonService.DisposeAsync();
}